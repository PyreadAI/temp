{
  "compilerOptions": {
    "moduleResolution": "node",
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "commonjs",
    "lib": ["es5", "es6", "dom"],
    "target": "es5",
    "jsx": "react",
    "typeRoots": [
      "/node_modules/@types",
      "/Types/"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "/node_modules/",
    "/bin",
    "/obj"
  ]
}
